<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weilun.birthdayreminder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".NotiReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".NotifyIntentService"
            android:exported="false" />
        <activity
            android:name=".AddBirthdayActivity"
            android:label="@string/title_activity_add_birthday"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewBirthdayActivity"
            android:label="@string/title_activity_view_birthday"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditBirthdayActivity"
            android:label="@string/title_activity_edit_birthday"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TodayBirthdayActivity"></activity>
    </application>

</manifest>